generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chat {
  id        Int      @id @default(autoincrement())
  chatId    BigInt?
  title     String

  @@map("chats") // Specify the table name explicitly in lowercase
}

model Message {
  id        Int      @id @default(autoincrement())
  text      String
  name      String
  userId    String
  socketID  String
  datetime  DateTime
  sentFrom  String

  @@map("messages") // Specify the table name explicitly in lowercase
}
